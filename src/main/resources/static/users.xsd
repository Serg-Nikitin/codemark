<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:tns="http://ru/nikitin/userservice/codemark"
           targetNamespace="http://ru/nikitin/userservice/codemark">


    <xs:element name="getUsersRequest">
    </xs:element>

    <xs:element name="getUsersResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="users" maxOccurs="unbounded" minOccurs="0" type="tns:user"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>


    <xs:element name="getUserByLoginRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="login" type="tns:nameLogin"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="getUserByLoginResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="user" type="tns:user"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="deleteUserByLoginRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="login" type="tns:nameLogin"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="deleteUserByLoginResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="tns:success"/>
                <xs:element ref="tns:errors" maxOccurs="unbounded" minOccurs="0"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:complexType name="user">
        <xs:sequence>
            <xs:element name="login" type="tns:nameLogin"/>
            <xs:element name="name" type="tns:nameLogin"/>
            <xs:element name="password" type="tns:password"/>
            <xs:element name="roles" maxOccurs="unbounded" minOccurs="0" type="tns:role"/>
        </xs:sequence>
    </xs:complexType>

    <xs:simpleType name="nameLogin">
        <xs:restriction base="xs:string"/>
    </xs:simpleType>

    <xs:simpleType name="role">
        <xs:restriction base="xs:string"/>
    </xs:simpleType>


    <xs:simpleType name="password">
        <xs:restriction base="xs:string">
            <xs:pattern value="[A-Z][0-9]"/>
        </xs:restriction>
    </xs:simpleType>


    <xs:element name="success" type="xs:boolean"/>
    <xs:element name="errors" type="tns:error"/>


    <xs:simpleType name="error">
        <xs:restriction base="xs:string"/>
    </xs:simpleType>
</xs:schema>